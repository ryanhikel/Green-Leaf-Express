<% include ../partials/other_head %>
    <div>
        <h2>
            <%=plant.plant_name%> (
                <%=plant.species%>)</h2>
        <img src="<%=plant.tree_img_url%>" height="200px" width="200px">
        <img src="<%=plant.leaf_img_url%>" height="200px" width="200px">
        <form method="POST" action="/plants/<%=plant.plant_id%>?_method=PUT">
            <input type="text" required name="plant_name" placeholder="Plant Name">
            <input type="text" required name="species" placeholder="Species">
            <input type="text" required name="tree_img_url" placeholder="Plant Url">
            <input type="text" required name="leaf_img_url" placeholder="Leaf Url">
            <br>
            <label for="region_id">Native Region</label>
            <select name="region_id">
                <% regions.forEach(region => { %>
                    <option value="<%=region.region_id%>">
                        <%=region.region_name%>
                    </option>
                    <% }) %>
            </select>
            <br>
            <button class="edit" type="submit">Edit</button>
        </form>
        <form method="POST" action="/plants/<%=plant.plant_id%>?_method=DELETE">
            <button class="delete" type="submit">Delete</button>
        </form>
    </div>
    <% include ../partials/footer %>